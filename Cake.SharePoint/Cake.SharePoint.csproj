<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <UseNETCoreGenerator>true</UseNETCoreGenerator>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.0.4</Version>
    <Authors>Jeroen Vandezande</Authors>
    <Company />
    <Description>Cake AddIn to upload build artifacts to SharePoint.
Also allows to get the current filenames on the server and also dele files on the server.</Description>
    <Copyright>Copyright © Jeroen Vandezande 2020</Copyright>
    <PackageProjectUrl>https://github.com/JeroenVandezande/Cake.SharePoint</PackageProjectUrl>
    <RepositoryUrl>https://github.com/JeroenVandezande/Cake.SharePoint.git</RepositoryUrl>
    <PackageTags>Cake Script Build SharePoint</PackageTags>
    <PackageReleaseNotes>Added methods to get the filenames on the remote server and also a way to delete files.</PackageReleaseNotes>
    <PackageIcon>cake-contrib-medium.png</PackageIcon>
    <PackageIconUrl />
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Cake.Core" Version="0.35.0" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="Microsoft.Office.Client.Policy.Portable">
      <HintPath>SharePointLibs\Microsoft.Office.Client.Policy.Portable.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Microsoft.Office.Client.TranslationServices.Portable">
      <HintPath>SharePointLibs\Microsoft.Office.Client.TranslationServices.Portable.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Microsoft.ProjectServer.Client.Portable">
      <HintPath>SharePointLibs\Microsoft.ProjectServer.Client.Portable.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Microsoft.SharePoint.Client.DocumentManagement.Portable">
      <HintPath>SharePointLibs\Microsoft.SharePoint.Client.DocumentManagement.Portable.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Microsoft.SharePoint.Client.Portable">
      <HintPath>SharePointLibs\Microsoft.SharePoint.Client.Portable.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Microsoft.Sharepoint.Client.Publishing.Portable">
      <HintPath>SharePointLibs\Microsoft.SharePoint.Client.Publishing.Portable.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Microsoft.SharePoint.Client.Runtime.Portable">
      <HintPath>SharePointLibs\Microsoft.SharePoint.Client.Runtime.Portable.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Microsoft.SharePoint.Client.Runtime.Windows">
      <HintPath>SharePointLibs\Microsoft.SharePoint.Client.Runtime.Windows.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Microsoft.SharePoint.Client.Search.Applications.Portable">
      <HintPath>SharePointLibs\Microsoft.SharePoint.Client.Search.Applications.Portable.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Microsoft.SharePoint.Client.Search.Portable">
      <HintPath>SharePointLibs\Microsoft.SharePoint.Client.Search.Portable.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Microsoft.SharePoint.Client.Taxonomy.Portable">
      <HintPath>SharePointLibs\Microsoft.SharePoint.Client.Taxonomy.Portable.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Microsoft.SharePoint.Client.UserProfiles.Portable">
      <HintPath>SharePointLibs\Microsoft.SharePoint.Client.UserProfiles.Portable.dll</HintPath>
      <Private>true</Private>
    </Reference>
    <Reference Include="Microsoft.SharePoint.Client.WorkflowServices.Portable">
      <HintPath>SharePointLibs\Microsoft.SharePoint.Client.WorkflowServices.Portable.dll</HintPath>
      <Private>true</Private>
    </Reference>
  </ItemGroup>

  <ItemGroup>
    <None Include="\\Mac\Home\Downloads\cake-contrib-medium.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
