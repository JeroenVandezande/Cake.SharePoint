<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <UseNETCoreGenerator>true</UseNETCoreGenerator>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Version>1.1.0</Version>
    <Authors>Jeroen Vandezande</Authors>
    <Company />
    <Description>Cake AddIn to upload build artifacts to SharePoint.
Also allows to get the current filenames on the server and also delete files on the server.</Description>
    <Copyright>Copyright © Jeroen Vandezande 2020</Copyright>
    <PackageProjectUrl>https://github.com/JeroenVandezande/Cake.SharePoint</PackageProjectUrl>
    <RepositoryUrl>https://github.com/JeroenVandezande/Cake.SharePoint.git</RepositoryUrl>
    <PackageTags>Cake Script Build SharePoint</PackageTags>
    <PackageReleaseNotes>Now using the Dotnet Standard NuGet Microsoft.SharepointOnline.CSOM package</PackageReleaseNotes>
    <PackageIcon>cake-contrib-medium.png</PackageIcon>
    <PackageIconUrl />
    <RepositoryType>git</RepositoryType>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
  </PropertyGroup>

  <PropertyGroup>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Cake.Core" Version="0.38.5" PrivateAssets="All" />
    <PackageReference Include="Microsoft.SharePointOnline.CSOM" Version="16.1.20720.12000" />
  </ItemGroup>

  <ItemGroup>
    <None Include="cake-contrib-medium.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
